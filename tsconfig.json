{
    "include": [
      "./**/src",
    ],
    "exclude": [
      "node_modules",
      "./dist/**/*"
    ],
    "compilerOptions": {
      "outDir": "./dist",
      "lib": ["es7", "dom"],
      "rootDir": ".",
      "target": "ES6",
      "module": "commonjs",
      "skipLibCheck": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "allowJs": true,
    }
}